@using ClientApplicationCore.ViewModels
@model ContactViewModel

<h1 class="text-center my-4">@Model.FirstName @Model.LastName</h1>
<div class="d-flex justify-content-center">
    <div class="card shadow-sm p-4" style="max-width: 500px; width: 100%; position: relative;">
        <div class="card-body">
            <p class="card-text mb-2"><i class="fas fa-envelope"></i> Email: @Model.Email</p>
            <p class="card-text mb-2"><i class="fas fa-phone"></i> Phone: @Model.PhoneNumber</p>
            <p class="card-text mb-2"><i class="fas fa-building"></i> Company: @Model.Company</p>
           <p class="card-text mb-2"><i class="fas fa-venus-mars"></i> Gender: @(Model.Gender == "M" ? "Male" : "Female")</p>

            <p class="card-text mb-2"><i class="fas fa-thumbs-up"></i> Favourite? :@(Model.Favourites ? "Yes" : "No")</p>
            <p class="card-text mb-2"><i class="fas fa-globe"></i> Country: @Model.Country.CountryName</p>
            <p class="card-text mb-2"><i class="fas fa-map-marker-alt"></i> State: @Model.State.StateName</p>
            @if(Model.Birthdate!=null)
            {
            <p class="card-text mb-2"><i class="fas fa-cake"></i> Birthdate: @String.Format("{0:dd-MM-yyyy}", Model.Birthdate) </p>
            }
           
            <div class="image-container">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Url.Content("~/uploads/" + Model.Image)" alt="Contact Image" class="img-fluid rounded-circle" width="140" height="150" />
                }
                else
                {
                    <img src="@Url.Content("~/uploads/defaultimage.png")" alt="Profile Picture" class="img-fluid rounded-circle" width="140" height="150" />
                }
            </div>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-3">
    <a asp-action="ShowAllContactWithPagination" class="btn btn-secondary">Back to Homepage</a>
</div>

<style>
    .image-container {
        position: absolute;
        top: 10px; /* Adjust this value to position the image vertically */
        right: 10px; /* Adjust this value to position the image horizontally */
    }

    .img-fluid {
        border-radius: 50%;
    }

    .card {
        border-radius: 10px;
    }

    body {
        background-color: #f8f9fa;
    }

    .btn-secondary {
        border-radius: 5px;
    }
</style>
