@model List<PhoneBookModel>
<table class="table">
    <thead>
        <tr>
            <th>Contact Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Contact Number</th>
            <th>Company</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.PhoneId</td>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Email</td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.Company</td>
                
                <td>
                    <img src="@Url.Content("~/Uploads/"+contact.FileName)" alt="Contact image" width="50" height="50" />
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.PhoneId">Edit</a>
                    <a asp-action="Details" asp-route-id="@contact.PhoneId">Details</a>
                    <a asp-action="Delete" asp-route-id="@contact.PhoneId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>